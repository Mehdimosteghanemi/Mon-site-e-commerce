{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Ma petite boutique{% endblock %}

{% block content %}

<div class="block-small">
    <form method="post">
    
        <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
        <label for="inputEmail">E-mail</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Ici, votre e-mail" autocomplete="email" required autofocus>
        
        <button class="btn btn-lg btn-info btn-block mt-3" type="submit">
            Valider
        </button>
        <hr>
        <p class="text-center">Ou souhaitez-vous <a href=" {{ path('app_login') }} ">Vous connecter</a>?</p>
    </form>
</div>

{% endblock %}
